<%- model_class = Question -%>
<div class="page-header">
  <h1 style="text-align:center;">Questões</h1>
</div>
<div style="padding: 0% 3%;">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th>Título </th>
        <th>Tipo de Questão </th>
        <th>Habilitado</th>
        <th>Tópico </th>
        <th>Histórico</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= link_to question.id, question_path(question) %></td>
          <td><%= question.title %></td>
          <td><%= question.questionType %></td>
          <td><%= question.enable %></td>
          <% 
            topics = Topic.all
            topic_title = "Questão sem tópico"
            topics.each do |topic|
              if question.topic_id == topic.id
                topic_title = topic.title
              else
                
              end
            end
          %>
          <td><%= topic_title %></td>
          <td><%=l question.created_at %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_question_path(question), :class => 'btn btn-default btn-xs' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_question_path,
              :class => 'btn btn-primary' %>
              
  <button class="btn btn-gree">
    <%= link_to "Home", '/' %>            
  </button>
</div>