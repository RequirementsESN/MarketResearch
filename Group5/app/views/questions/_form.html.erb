<%= form_for @question, :html => { :class => "form-horizontal question" } do |f| %>
<div style="padding: 0% 3%;">
    <% if @question.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <strong>Título</strong>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:title]) %>
  </div>
  <div class="control-group">
  <br>  
  <strong>Tipo de Questão</strong>
    <div class="controls">
      <%= f.select  :questionType, ['Check Box', 'Drop List', 'Text Area', 'Número', 'Radio Button'],:class => 'form-control' %>
    </div>
    <%= error_span(@question[:questionType]) %>
  </div>
  <div class="control-group">
    <br>
    <strong>Habilitação</strong>
    <div class="controls">
      <%= f.check_box :enable %>
    </div>
    <%= error_span(@question[:enable]) %>
  </div>
 


  <div class="control-group">
    <br> <strong>Tópico</strong>
    <div class="controls">
      <%= f.select :topic_id, Topic.all.collect{|topic| [topic.title, topic.id]} , :class => 'form-control' %>
    </div>
    <%= error_span(@question[:topic_id]) %>
  </div>
  <br>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            questions_path, :class => 'btn btn-default' %>

</div>

<% end %>
